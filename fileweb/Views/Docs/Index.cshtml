@model fileweb.Models.DocsViewModel
@{
    ViewData["Title"] = "Home Page";
}



<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand js-scroll-trigger" href="#page-top">
        <span class="d-block d-lg-none">Help At Home</span>
        <span class="d-none d-lg-block">
            <img class="img-fluid img-profile mx-auto mb-2" src="img/hahlogo.png" alt="">
        </span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="#about">HOME</a>
            </li>
            @if (Model.Category2List != null)
            {
                @foreach (var c2 in Model.Category2List.OrderBy(c => c.CategoryName))
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#@c2.CategoryName">@c2.CategoryName</a>
                    </li>
                }
            }
        </ul>
    </div>
</nav>

<div class="container-fluid p-0">
    @if (Model != null)
    {
        <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
            <div class="w-100">
                <h1 class="mb-0">
                    CONNECT CARE
                    <span class="text-primary">@Model.Category1</span>
                </h1>
                <p class="lead mb-3">Training materials and reports related to Connect Care initiatives</p>

            </div>
        </section>

        @if (Model.Category2List != null)
        {
            @foreach (var cat in Model.Category2List.OrderBy(c => c.CategoryName))
            {

                <hr class="m-0">

                <section class='resume-section p-3 p-lg-5 d-flex align-items-center' id='@cat.CategoryName'>
                    <div class='w-100'>

                        @if (cat.Items != null)
                        {
                            @foreach (var item in cat.Items.OrderBy(i => i.SeqenceNo))
                            {
                                @if (item.IsHeader)
                                {
                                    @Html.Raw($"<h{item.Level} class='mb - 3'>")
                                    @item.Title
                                    @Html.Raw($"</h{item.Level}>")
                                }
                                else
                                {
                                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-3">

                                        <div class="resume-content">

                                            <h4 class="mb-0"><a href="@item.Url" target='@(item.NewWindow ? "_blank" : "_self")'>@item.Title&nbsp;<i class="fa @(string.IsNullOrWhiteSpace(item.Icon) ? "fa-arrow-circle-down" : item.Icon)" aria-hidden="true"></i></a></h4>
                                            <div class="subheading mb-3">@item.Description</div>

                                        </div>

                                    </div>
                                    }
                                }
                        }
                    </div>
                </section>
            }
        }
    }
</div>

